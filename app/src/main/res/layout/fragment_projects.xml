<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_fragment_projects_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_projects_title"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:text="@string/title_frame_projects"
        android:textAppearance="@style/frame_title_active" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_projects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="8dp"
        android:text="@string/catalog"
        android:textAppearance="@style/frame_title_active_invisible" />


</LinearLayout>