<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_fragment_projects_container"
    android:layout_width="match_parent"
    android:layout_height="185dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_projects"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_projects_title" />

    <TextView
        android:id="@+id/fragment_projects_title"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:text="@string/title_frame_projects"
        android:textAppearance="@style/frame_title_active"
        app:layout_constraintBottom_toTopOf="@+id/recycler_projects"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>